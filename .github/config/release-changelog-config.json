{
  "version-resolver": {
    "major": { "labels": ["major"] },
    "minor": { "labels": ["minor"] },
    "patch": { "labels": ["patch"] },
    "default": "patch"
  },
  "categories": [
    {
      "title": "🚀 Features",
      "labels": ["feature", "enhancement"]
    },
    {
      "title": "🐛 Bug Fixes",
      "labels": ["bug", "fix"]
    },
    {
      "title": "📚 Documentation",
      "labels": ["documentation", "docs"]
    },
    {
      "title": "🛠️ Maintenance",
      "labels": ["maintenance", "dependencies", "chore"]
    }
  ],
  "autolabeler": [
    {
      "label": "feature",
      "title": ["/feat(.*)/", "/add(.*)/"],
      "branch": ["/feat(.*)/", "/add(.*)/"]
    },
    {
      "label": "fix",
      "title": ["/fix(.*)/", "/bug(.*)/", "/hot(.*)/"],
      "branch": ["/fix(.*)/", "/bug(.*)/", "/hot(.*)/"]
    },
    {
      "label": "docs",
      "title": ["/docs(.*)/"],
      "branch": ["/docs(.*)/"]
    }
  ],
  "template": "# Changelog\n\n{{#each categories}}\n## {{this.title}}\n{{#each this.items}}\n- {{this.title}} (#{{this.number}})\n{{/each}}\n\n{{/each}}\nReleased with ❤️"
}
